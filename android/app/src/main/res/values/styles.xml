<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Back color of the app in recent apps -->
        <item name="colorPrimary">@color/A</item>

        <!-- Status bar color -->
        <item name="colorPrimaryDark">@color/B</item>
        
        <!-- Picker styles -->
        <item name="android:spinnerItemStyle">@style/PickerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/PickerDropDownItem</item>
        
        <!-- Arrow color of picker -->
        <item name="android:colorControlNormal">#000000</item>
        
        <!-- Alert styles -->
        <item name="android:alertDialogTheme">@style/Alert</item>
    </style>
    
    <!-- Picker styles -->
    <style name="PickerItem" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/vazir_bold_fd</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!-- Picker styles -->
    <style name="PickerDropDownItem" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/vazir_fd</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/picker</item>
    </style>

    <!-- Alert styles -->
    <style name="Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Background color -->
        <item name="android:background">@color/white</item>

        <!-- Title -->
        <item name="android:windowTitleStyle">@style/AlertTitle</item>

        <!-- Text -->
        <item name="android:textAppearance">@style/AlertText</item>
        <item name="android:textAppearanceSmall">@style/AlertText</item>
        <item name="android:textColorPrimary">@color/black</item>

        <!-- Buttons -->
        <item name="android:textColor">@color/black</item> <!-- FIXME: separate postive and negative buttons -->
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/vazir_fd</item>
    </style>

    <style name="AlertTitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/vazir_bold_fd</item> <!-- FIXME: not working -->
    </style>

    <style name="AlertText">
        <item name="android:fontFamily">@font/vazir_fd</item>
        <item name="android:textSize">8dp</item> <!-- FIXME: not working -->
    </style>

</resources>
